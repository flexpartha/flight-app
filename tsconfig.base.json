{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@flight-app/feature-search": ["feature-search/src/index.ts"],
      "@flight-app/feature-upgrade": ["feature-upgrade/src/index.ts"],
      "@flight-app/flight-data": ["flight-data/src/index.ts"],
      "@flight-app/flight-detail": ["flight-detail/src/index.ts"],
      "@flight-app/flight-schedule": ["flight-schedule/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
